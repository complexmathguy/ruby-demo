<div class="title text-center">
  List of Tournaments
</div>

<table class="table table-sm table-hover table-striped"">
	<thead class="table-dark">
		<tr>
			<th style="text-align:center">name</th>
			<th style="text-align:center">Type</th>
			<th style="text-align:center" colspan="2">Actions</th>
	</thead>
	<tbody>
 
  <% @tournaments.each do |tournament| %>
		<tr>   
			<td style="text-align:center">
	  			<%= tournament.name %>
			</td>
			<td style="text-align:center">
	  			<%= tournament.Type %>
			</td>
			<td style="vertical-align:middle;text-align:center">
				<%= button_to 'Change', edit_tournament_path(tournament), :method => :get, :class => "btn btn-secondary btn-sm"%>
			</td>
			<td style="vertical-align:middle;text-align:center">
				<%= button_to 'Delete', tournament_path(tournament), :method => :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm"%>
			</td>
    	</tr>
  <% end %>
</table>
<%= button_to 'New Tournament', new_tournament_path, :method => :get, :class => "btn btn-success btn-sm" %>