<div class="title text-center">
  List of Leagues
</div>

<table class="table table-sm table-hover table-striped"">
	<thead class="table-dark">
		<tr>
			<th style="text-align:center">name</th>
			<th style="text-align:center" colspan="2">Actions</th>
	</thead>
	<tbody>
 
  <% @leagues.each do |league| %>
		<tr>   
			<td style="text-align:center">
	  			<%= league.name %>
			</td>
			<td style="vertical-align:middle;text-align:center">
				<%= button_to 'Change', edit_league_path(league), :method => :get, :class => "btn btn-secondary btn-sm"%>
			</td>
			<td style="vertical-align:middle;text-align:center">
				<%= button_to 'Delete', league_path(league), :method => :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm"%>
			</td>
    	</tr>
  <% end %>
</table>
<%= button_to 'New League', new_league_path, :method => :get, :class => "btn btn-success btn-sm" %>